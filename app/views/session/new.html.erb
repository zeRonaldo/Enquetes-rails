<div class="container">
    <div class="card">
        <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
            <li class="tab"><a class="active" href="#login">Login</a></li>
            <li class="tab"><a  href="<%= signup_path%>">Cadastro</a></li>
        </ul>
        </div>
        <div class="card-content grey lighten-5">
        <div id="login">
        
            <div class="center-align">
                <h3>Login</h3>
                <p>Poxa vida a gente j√° tava com saudades!!!</p>
            </div>

            <%= form_tag login_path do %>
            <div class="container">
                    <div class="col s12 m8">
                    
                        <div class="row">
                            <div class="input-field col s12">
                            <%= label_tag :email%>
                            <%= text_field_tag :email, params[:email]%>
                        </div></div>

                        <div class="row">
                            <div class="input-field col s12">
                            <%= label_tag :senha%>
                            <%= password_field_tag :password%>
                        </div>
                        </div>

                        <div class="actions center-align">
                            <%= submit_tag "Entrar", :class => "btn waves-effect waves-light" %>
                        </div>
                    </div>
                </div>
            <%end%>
           
        </div>
        </div>
    </div>
</div>

